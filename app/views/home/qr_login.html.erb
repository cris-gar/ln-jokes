<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal">
    <input data-modal-target="k1" type="hidden" value="<%= @k1 %>">

    <!-- Modal -->
    <div class="fixed z-10 inset-0 overflow-y-auto" data-modal-target="modal">
      <div class="flex items-center justify-center min-h-screen">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
        <div class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all sm:max-w-lg sm:w-full">
          <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
            <div class="sm:flex sm:items-start">
              <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                <div class="mt-2">
                  <%= image_tag(@qr.to_data_url, class: "w-full") %>
                </div>
              </div>
            </div>
          </div>
          <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
            <button class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm" data-action="click->modal#close">Cerrar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
