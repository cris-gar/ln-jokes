<p style="color: green"><%= notice %></p>

<div id="jokes" class="container mx-auto p-4">
  <%= link_to 'cerrar session', session_path(Current.user.id), data: {
    turbo_method: :delete,
  }, class: "mx-2 text-teal-500 font-bold" if Current.user %>
  <%= link_to 'perfil', users_path(Current.user.id) if Current.user %>
  <% if Current.user %>
    <%= Current.user.username %>
  <% else %>
    <%= link_to 'login', qr_login_path, data: { turbo_frame: "modal" } %>
  <% end %>
  <h1>Home</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @jokes.each do |joke| %>
      <%= render partial: 'jokes/joke', locals: { joke: joke } %>
    <% end %>
  </div>
</div>
